# Environment variables for CloudClearingAPI
# Copy this file to .env and customize with your credentials

# Google Earth Engine Authentication
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GEE_PROJECT=your-gee-project-id

# Email notifications (Gmail example)
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_RECIPIENTS=recipient1@example.com,recipient2@example.com

# Database (if using PostgreSQL in production)
DATABASE_URL=postgresql://username:password@localhost/cloudclearing
DATABASE_ENABLED=false

# Slack/Discord webhooks (optional)
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_TOKEN=xoxb-your-slack-bot-token

# Application settings
DEBUG=false
LOG_LEVEL=INFO